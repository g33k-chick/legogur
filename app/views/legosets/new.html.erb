<h1>Add a Lego set</h1>
<%= form_for @legoset do |f| %>
	<p>
		<%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
		<%= f.label :product_type %><br>
    <%= f.text_field :product_type %>
  </p>
  <p>
		<%= f.label :pieces %><br>
    <%= f.text_field :pieces %>
  </p>
  <p>
		<%= f.label :minifigures %><br>
    <%= f.text_field :minifigures %>
  </p>
  <p>
		<%= f.label :url %><br>
    <%= f.text_field :url %>
	</p>
	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>