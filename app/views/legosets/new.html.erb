<h1>Add a Lego set</h1>
<%= form_tag "/legosets" do %>
	<p>
		<%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </p>
  <p>
		<%= label_tag :product_type %><br>
    <%= text_field_tag :product_type %>
  </p>
  <p>
		<%= label_tag :pieces %><br>
    <%= text_field_tag :pieces %>
  </p>
  <p>
		<%= label_tag :minifigures %><br>
    <%= text_field_tag :minifigures %>
  </p>
  <p>
		<%= label_tag :url %><br>
    <%= text_field_tag :url %>
	</p>
	<p>
		<%= submit_tag "Save" %>
	</p>
<% end %>